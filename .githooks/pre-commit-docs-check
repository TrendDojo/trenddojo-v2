#!/bin/bash
# Pre-commit hook to enforce documentation structure
# Prevents docs from being created in wrong locations

# ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if any docs are being added to root of /docs/
DOCS_ROOT_FILES=$(git diff --cached --name-only --diff-filter=A | grep '^docs/[^/]*\.md$' | grep -v -E '^docs/(README|PROJECT_CONTEXT|ROADMAP|architecture|SECURITY|CLAUDE)\.md$')

if [ ! -z "$DOCS_ROOT_FILES" ]; then
    echo -e "${RED}‚ùå Documentation Structure Violation!${NC}"
    echo -e "${YELLOW}The following files are being added to docs/ root:${NC}"
    echo "$DOCS_ROOT_FILES"
    echo ""
    echo -e "${GREEN}‚úÖ Allowed root files (only 6):${NC}"
    echo "  - README.md, PROJECT_CONTEXT.md, ROADMAP.md"
    echo "  - architecture.md, SECURITY.md, CLAUDE.md"
    echo ""
    echo -e "${GREEN}üìÅ Use these folders instead:${NC}"
    echo "  - docs/data/       ‚Üí Database, market data, sync docs"
    echo "  - docs/features/   ‚Üí Feature documentation"
    echo "  - docs/patterns/   ‚Üí Design and architecture patterns"
    echo "  - docs/setup/      ‚Üí Configuration and setup guides"
    echo "  - docs/operations/ ‚Üí Development workflow docs"
    echo "  - docs/brokers/    ‚Üí Broker integration docs"
    echo "  - docs/deployment/ ‚Üí Deployment guides"
    echo ""
    echo -e "${YELLOW}Check /docs/README.md for complete structure guidance${NC}"
    exit 1
fi

# Check if patterns are being created outside patterns/ folder
MISPLACED_PATTERNS=$(git diff --cached --name-only --diff-filter=A | grep -i 'pattern' | grep -v '^docs/patterns/')

if [ ! -z "$MISPLACED_PATTERNS" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: Pattern files should go in docs/patterns/${NC}"
    echo "$MISPLACED_PATTERNS"
    echo ""
fi

echo -e "${GREEN}‚úÖ Documentation structure check passed${NC}"