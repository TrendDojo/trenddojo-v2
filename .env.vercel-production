# TrendDojo Vercel Environment Variables - PRODUCTION
# Copy and paste these into Vercel Dashboard -> Settings -> Environment Variables
# Set Environment: Production

# Database (Supabase "trenddojo" production database)
# Replace [PROD-PASSWORD] and [PROD-PROJECT-REF] with actual values from Supabase
DATABASE_URL="postgresql://postgres:[PROD-PASSWORD]@db.[PROD-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Configuration (production)
SUPABASE_URL="https://[PROD-PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-production-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-production-supabase-service-role-key"

# Authentication (NextAuth v5)
# Use same secret as staging for consistency, or generate new one
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="https://www.trenddojo.com"
NEXT_PUBLIC_APP_URL="https://www.trenddojo.com"

# Production OAuth credentials
OAUTH_GOOGLE_CLIENT_ID="your-production-google-client-id"
OAUTH_GOOGLE_SECRET_KEY="your-production-google-client-secret"

# SendGrid Email Service (production)
SENDGRID_API_KEY="SG.your-production-api-key"
SENDGRID_FROM_EMAIL="no-reply@trenddojo.com"
SENDGRID_ENVIRONMENT="production"

# Trading API Keys (production/live)
ALPACA_API_KEY="your-alpaca-live-api-key"
ALPACA_SECRET_KEY="your-alpaca-live-secret-key"
ALPACA_BASE_URL="https://api.alpaca.markets"

# Market Data (production)
POLYGON_API_KEY="your-polygon-production-api-key"

# Payment Processing
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"