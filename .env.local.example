# TrendDojo Local Development Environment
# Copy this file to .env.local and update with your values

# Database - Use local PostgreSQL or Supabase for development
DATABASE_URL="postgresql://yourusername@localhost:5432/trenddojo_dev"

# Authentication (NextAuth v5)
NEXTAUTH_SECRET="your-generated-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Optional OAuth credentials for Google login
OAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
OAUTH_GOOGLE_SECRET_KEY="your-google-client-secret"

# Optional: Email service (SendGrid) for local testing
SENDGRID_API_KEY="SG.your-dev-api-key"
SENDGRID_FROM_EMAIL="dev@trenddojo.com"
SENDGRID_ENVIRONMENT="development"